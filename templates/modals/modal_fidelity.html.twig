<style>
    /* Appliquer la couleur noire au texte dans la modale */
    body, h2, label, input {
        color: black;
    }
</style>

<form action="" method="POST" id="modal-form">
    <input type="hidden" name="form-name" id="form-name" value="{{formName}}">
    <input type="hidden" name="step" id="step" value="{{step}}">
    <input type="hidden" name="previous-step" id="previous-step" value="{{previousStep}}">

    <div class="modal-header">
        <h2 class="modal-title fs-5" id="ModalLabel">Votre espace fidélité</h2>
        {# <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> #}
    </div>
    <div class="modal-body">
        {% if message %}
        <div class="alert alert-danger" role="alert">
            {{message|raw}}
        </div>
        {% endif %}

       <p>Sélectionnez vos préférences de cadeaux :</p>

        <label for="gifts">Snacking (popcorn, boissons...)</label>
        <input type="checkbox" name ="gifts[]" id ="gifts" value="Snacking"></br>

        <label for="gifts">Billets de cinéma</label>
        <input type="checkbox" name ="gifts[]" id ="gifts" value="Billets"></br>

        <label for="gifts">Coupons de remises</label>
        <input type="checkbox" name ="gifts[]" id ="gifts" value="Coupons"></br>

        <label for="gifts">Goodies</label>
        <input type="checkbox" name ="gifts[]" id ="gifts" value="Goodies"></br>

         <label for="gifts">Réductions de restaurants partenaires</label>
        <input type="checkbox" name ="gifts[]" id ="gifts" value="Reductions"></br>
     
    </div>
    
    <div class="modal-footer">
        <button type="submit" id="submit">Valider</button>
    </div>
</form>
