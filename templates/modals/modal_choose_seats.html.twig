<style>
    /* Appliquer la couleur noire au texte dans la modale */
    body, h2, label, input {
        color: black;
    }
</style>

<form action="" method="POST" id="modal-form">
    <input type="hidden" name="form-name" id="form-name" value="{{formName}}">
    <input type="hidden" name="step" id="step" value="{{step}}">
    <input type="hidden" name="previous-step" id="previous-step" value="{{previousStep}}">

    <div class="modal-header">
        <h2 class="modal-title fs-5" id="ModalLabel">Votre zone d'emplacement préféré dans une salle UGC</h2>
        {# <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> #}
    </div>
    <div class="modal-body">
        {% if message %}
        <div class="alert alert-danger" role="alert">
            {{message|raw}}
        </div>
        {% endif %}

    <p>Choisissez votre zone d'emplacement préférée :</p>

    <label for="seats">BG</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="BG">

    <label for="seats">BC</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="BC">

    <label for="seats">BD</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="BD"></br>

    <label for="seats">MG</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="MG">

    <label for="seats">MC</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="MC">

    <label for="seats">MD</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="MD"></br>

    <label for="seats">HG</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="HG">

    <label for="seats">HC</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="HC">

    <label for="seats">HD</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="HD"></br>

    </div>
    <div class="modal-footer">
        <button type="submit" id="submit">Valider</button>
    </div>
</form>
