<form action="" method="POST" id="modal-form">
    <input type="hidden" name="form-name" id="form-name" value="{{formName}}">
    <input type="hidden" name="step" id="step" value="{{step}}">
    <input type="hidden" name="previous-step" id="previous-step" value="{{previousStep}}">

    <div class="modal-body">
        {% if message %}
        <div class="alert alert-danger" role="alert">
            {{message|raw}}
        </div>
        {% endif %}

    <div class="d-flex justify-content-between picto-haut">
        <div >
                <a href="modale-message.html"><img src="assets/icones/fleche-gauche.svg" alt="Icône Retour"></a>
        </div>
        <div class="croix">
            <a href="#"><img src="assets/icones/cross.svg" alt="Croix blanche"></a>
        </div>
        
        <div class="row">
            
            <div class="bandeau-blanc col-12">
                <h1 class="text-center">Votre zone d’emplacement préférée dans une salle ugc</h1>
            </div>
            <div class="col-12">
                <div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow="25"
                    aria-valuemin="0" aria-valuemax="100" style="height: 10px"><!-- RÉDUCTION TAILLE -->
                    <div class="progress-bar" style="width: 40%"></div><!-- Modif %-->
                </div>
                <div class="row">
                    <div class="icone-titre col-12">
                        <img class="moncompte" src="assets/icones/fauteuil-s.svg" alt="Compte"
                            style="display: inline-block;">
                        <span class="compte" href="#">Choisissez votre zone d’emplacement préférée&nbsp;: </span>
                    </div>
                    <div class="d-flex justify-content-center">
                        <img src="assets/icones/emplacement-vide.svg" alt="salles places">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                        <button class="suppression-tag-modale">Emplacement salle</button>
                    </div>
                    <div class="col-md-4"></div>
                </div>
                <div class="row espace-fin">
                    <div class="col-6">
                    </div>
                    <div class="col-md-2">
                        <a class="bouton-retour" href="modale-cinemas-preferes.html">
                            <img src="./assets/icones/fleche-gauche-xs.svg" alt="Flèche gauche">Retour
                        </a>
                    </div>
                    <div class="col-md-2 suivant">
                       <button type="submit" id="submit" class="secondaire bouton-modale">
                       <span>Suivant</span><img src="./assets/icones/arrow-s.svg" alt="Flèche droite bleue">
                       </button>   
                    </div>

                </div>
            </div>
            <div class="espace-fin"> </div>
        </div>


    <label for="seats">BG</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="BG">

    <label for="seats">BC</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="BC">

    <label for="seats">BD</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="BD"></br>

    <label for="seats">MG</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="MG">

    <label for="seats">MC</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="MC">

    <label for="seats">MD</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="MD"></br>

    <label for="seats">HG</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="HG">

    <label for="seats">HC</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="HC">

    <label for="seats">HD</label>
    <input type="checkbox" name ="seats[]" id ="seats" value="HD"></br>

</div>
</form>
