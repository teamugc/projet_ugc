<form action="" method="POST" id="modal-form">
	<input type="hidden" name="form-name" id="form-name" value="{{formName}}">
	<input type="hidden" name="step" id="step" value="{{step}}">
	<input type="hidden" name="previous-step" id="previous-step" value="{{previousStep}}">

<div class="modal-body">
        {% if message %}
    <div class="alert alert-danger" role="alert">
            {{message|raw}}
        </div>
         {% endif %}    

 		<div class="d-flex justify-content-between picto-haut">
            <div >
                <a href="#"><img src="assets/icones/fleche-gauche.svg" alt="Icône Retour"></a>
            </div>
            <div class="croix">
                <a href="#"><img src="assets/icones/cross.svg" alt="Croix blanche"></a>
            </div>
        </div>
        <div class="row">
            

            <div class="bandeau-blanc col-12">
                <h1 class="text-center">Mes cinémas préférés</h1>
            </div>
            <div class="col-12">
                <div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow="25"
                    aria-valuemin="0" aria-valuemax="100" style="height: 10px"> <!-- réduction taille -->
                    <div class="progress-bar" style="width: 20%"></div><!-- réduction barre de progression-->
                </div>
            </div>
            <div class="row">
                <div class="icone-titre col-12">
                    <img class="moncompte" src="assets/icones/bobine-s.svg" alt="Compte" style="display: inline-block;">
                    <span class="compte" href="#">Ajoutez votre cinéma favori : </span>
                </div>
            </div>
            <div class="col-md-6">
                <label for="modal-choose-location-cinema"></label>
                <input type="hidden" id="cinemaTab" name="cinema" value ="">
                <input class="inputvillecp-modale" name="location" id="modal-choose-location-cinema" type="text" placeholder="Saisissez votre CP, ville">
            </div>

            <div class="bloc-cinemas row">
				<div id="suggestions"></div>
				<div id="cardSuggestion">
                   
                </div>
            </div>
        </div>
        <div class="row espace-fin-prefere">
            <div class="col-md-8">
            </div>
            <div class="col-md-2">
                <a class="bouton-retour" href="{{path('app_modals_accueil')}}">
                    <img src="./assets/icones/fleche-gauche-xs.svg" alt="Flèche gauche">Retour
                </a>
            </div>
            <div class="col-md-2 suivant">
				<button type="submit" id="submit" class="secondaire bouton">
				<span>Suivant</span> <img src="/assets/icones/arrow-s.svg" alt="Flèche droite bleue">
				</button> 
            </div>

        </div>
</div>
</form>
