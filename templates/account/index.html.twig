{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %} 
<main>
        <section id="zone-centrale">
            <div class="container">
                <div class="row align-items-stretch">

{{include ("shared/_body.html.twig")}}
                    

                        
                        <article class="col-10 col-md-10 top-article">

                        <div class="zone-centrale">
                            <div class="d-flex-titre">
                                <img class="icone-titre-rubrique" src="/assets/icones/roue-s.svg" alt="Icone bobine film">
                                <h2 class="icone rubrique">Mon profil</h2>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-6 text-center">
                                    <div class="encadre-profil">
                                        <img class="encadre-icone" src="/assets/icones/roue-s.svg" alt="Roue">
                                        <h2 class="icone rubrique">Laurent</h2>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 text-center">
                                    <div class="encadre-profil">
                                        <img class="encadre-icone-film" src="/assets/icones/cine-xs.svg" alt="Ciné">
                                        <h2 class="icone rubrique ">Préférences Films</h2>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 text-center">
                                    <div class="encadre-profil">
                                        <img class="encadre-icone" src="/assets/icones/fauteuil-s.svg" alt="Fauteuil">
                                        <h2 class="icone rubrique ">Placement Favori</h2>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 text-center">
                                    <div class="encadre-profil">
                                        <img class="encadre-icone-widget" src="/assets/icones/widget.svg" alt="Icone bobine film">
                                        <h2 class="icone rubrique ">Mon UGC</h2>
                                        <div class="form-check form-switch toggle">
                                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked="">
                                        </div>

                                    </div>
                                </div>
                                <div class="col-12 col-md-6 text-center">
                                    <div class="encadre-profil">
                                        <img class="encadre-icone" src="/assets/icones/abonnement-s.svg" alt="Abonnement">
                                        <h2 class="icone rubrique ">Abonnement</h2>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 text-center">
                                    <div class="encadre-profil">
                                        <img class="encadre-icone-cloche" src="/assets/icones/cloche-s.svg" alt="Cloche">
                                        <h2 class="icone rubrique ">Notifications</h2>
                                    </div>
                                </div>
                            </div>

                        </div>


                    </article>

                    
                    <!-- FIN ZONE CENTRALE -->
                </div>
            </div>
        </section>
    </main>
</div>

{% endblock %}

