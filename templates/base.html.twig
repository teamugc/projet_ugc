		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		<link rel="stylesheet" href="/assets/css/commun.css">
		<link rel="stylesheet" href="/assets/css/identification.css">
		<link rel="stylesheet" href="/assets/css/mes-cinemas.css">
		<link rel="stylesheet" href="/assets/css/mes-films.css">
		<link rel="stylesheet" href="/assets/css/modale.css">
		<link rel="stylesheet" href="/assets/css/mon-profil.css">
		<link rel="stylesheet" href="/assets/css/widget.css">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}{% endblock %}

		{% block javascripts %}{% endblock %}

	</head>

	<body>
		<header>
			<div class="container">
				<div
					class="d-flex nav-haute">
					<!--Conteneur Flex-->
					<a href="{{path('app_index')}}">
						<img id="logo" src="/assets/images/logo-ugc.svg" alt="Logo UGC">
					</a>
					<!--item-->

					<nav class="nav-picto d-flex ">
						<!--item-->
						<!--Conteneur Flex--><a class="recherche" href="#"> Recherche</a>
						<!--item-->
						{% if app.user %}
							<a class="compte" href="{{ path('app_my_account_index') }}">Mon Compte</a>
							<!--item-->
						{% else %}
							<a class="compte" href="{{ path('app_login') }}">Mon Compte</a>
							<!--item-->
						{% endif %}
						<a class="recrutement" href="#">Recrutement</a>
						<!--item-->
						<a class="pro" href="#">Espace Pro</a>
						<!--item-->

					</nav>
				</div>
			</div>

			<div
				class="nav-basse ">
				<!--Conteneur Flex-->
				<div class="container">
					<nav class="row">
						<!--item-->
						<!--Conteneur Flex-->
							<div class="col-12 col-lg-9 text-center text-lg-start"> <a class="lien-bas" href="#">Cinémas</a>
							<!--item-->
							<a class="lien-bas" href="#">Films</a>
							<!--item-->
							<a class="lien-bas d-none d-lg-inline-block" href="#">UGC Illimité</a>
							<!--item-->
							<a class="lien-bas d-none d-lg-inline-block" href="#">&Eacute;vénements</a>
							<!--item-->
							<a class="lien-bas d-none d-lg-inline-block" href="#">Cartes & offres</a>
							<!--item-->
							<a class="lien-bas d-none d-lg-inline-block" href="#">News</a>
							<!--item-->
							<a class="lien-bas d-none d-lg-inline-block" href="#">Viva Opéra&nbsp;!</a>
							<!--item-->
							{% if is_granted('ROLE_ADMIN') %}
								<a class="lien-bas d-none d-lg-inline-block" href="{{ path('app_user_list') }}">Liste des utilisateurs</a>
								<!--item-->
							{% endif %}
						</div>


						<div class="col-12 col-lg-3 text-center text-lg-end d-none d-lg-inline-block">
							<a class="rs" href="#"><img src="/assets/icones/facebook.svg" alt="Logo Facebook"></a>
							<!--item-->
							<a class="rs" href="#"><img src="/assets/icones/twitter.svg" alt="Logo Twitter"></a>
							<!--item-->
							<a class="rs" href="#"><img src="/assets/icones/insta.svg" alt="Logo Instagram"></a>
							<!--item-->
							<a class="rs" href="#"><img src="/assets/icones/tictoc.svg" alt="Logo Tik Tok"></a>
							<!--item-->
						</div>
					</nav>
				</div>
			</div>
		</header>


	</body>

	{% block body %}{% endblock %}

	<!-- Modal -->
	<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				HELLO
			</div>
		</div>
	</div>

	<footer id="top">
		<div class="container mt-md-3 ">
			<div class="flex-footer">

				<a href="#">Besoin d'aide?</a>
				<a href="#">Contact</a>
				<a href="#">UGC recrute</a>
				<a href="#">Groupe UGC</a>
				<a href="#">UGC Pro</a>
				<a href="#">UGC BE</a>
				<a href="#">UGC Distribution</a>
				<a href="#">Formule Gourmande</a>

			</div>

			<div class="flex-footer fond">

				<a href="#">Politique RH du groupe</a>
				<a href="#">Politique de confidentialité</a>
				<a href="#">Conditions générales</a>
				<a href="#">Mentions légales/ Cookies</a>
				<a href="#">Charte de spectateurs</a>


			</div>

		</div>

	</footer>
	<script src="/assets/js/modals.js"></script>
	<script src="/assets/js/main_cinema.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
